{
  "name": "express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "An Express.js boilerplate backend",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "rimraf build && tsc",
    "start": "npm run build && NODE_ENV=production tsx build/index.js",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint --fix --ext .ts,.js src/",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "check-format": "prettier --check 'src/**/*.{ts,js,json}'",
    "ts:check": "tsc --noEmit",
    "test": "jest",
    "prepare": "husky install",
    "docker:build": "docker-compose build --no-cache",
    "docker:start": "docker-compose up",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pino-http": "^9.0.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "npm run ts:check",
      "npm run lint:fix",
      "npm run format",
      "npm run lint",
      "git add"
    ],
    "**/*.{ts,js,json,css,md}": "npm run format"
  },
  "author": "Edwin Hernandez",
  "repository": "edwinhern/express-typescript-2024",
  "license": "ISC"
}
