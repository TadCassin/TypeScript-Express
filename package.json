{
  "name": "promise-project-api",
  "version": "1.0.0",
  "description": "An Express.js boilerplate backend",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf build && tsc",
    "start": "npm run build && NODE_ENV=production node -r dotenv/config build/index.js",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint --fix --ext .ts,.js src/",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "check-format": "prettier --check 'src/**/*.{ts,js,json}'",
    "docker-prod": "docker-compose up --build",
    "docker-stop": "docker-compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pino-http": "^8.6.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
